<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regist" >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:orientation="horizontal" 
            android:gravity="center">
            <TextView 
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textSize="24sp"
	            android:textColor="@color/black1"
            	android:text="注册 "/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dip"
        android:layout_marginLeft="45dip"
        android:layout_marginRight="60dip"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black1"
                android:text="账号：" />
            <EditText
                android:id="@+id/registeretUid"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:inputType="number"
	            android:maxLength="10"
	            android:textSize="16sp"
	            android:hint="10位数字以内"
                android:background="@drawable/input_normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black1"
                android:text="密码：" />
            <EditText
                android:id="@+id/registeretPwd"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="6到10个字符"
                android:background="@drawable/input_normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black1"
                android:text="昵称：" />
            <EditText
                android:id="@+id/register_nick"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="不能为空"
                android:background="@drawable/input_normal" />
        </LinearLayout>
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black1"
                android:text="性别：" />
            <RadioGroup 
                android:id="@+id/register_radiogroup"
                android:layout_width="wrap_content"
                android:checkedButton="@+id/register_radio_nan"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/register_radio_nan"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/black1"
	                
	                android:text="male"/>
	            <RadioButton 
	                android:id="@+id/register_radio_nv"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/black1"
	                android:text="female"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
           
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/rigister_btn_register"
                android:layout_width="220dip"
                android:layout_height="35dip"
                android:background="@drawable/login_button_nor"
                android:gravity="center"
                android:textColor="@color/black1"
                android:text="注册" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>