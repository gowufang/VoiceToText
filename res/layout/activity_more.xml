<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:background="@drawable/topbar_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:ellipsize="middle"
            android:gravity="center_horizontal"
            android:textColor="@color/black1" 
            android:text="个人资料  "
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="98dp"
        android:layout_weight="0.84" >

        <ImageView
            android:id="@+id/avatar_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeLayout2"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/avatar_default" />

        <TextView
            android:id="@+id/account_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/avatar_more"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_toRightOf="@+id/avatar_more"
            android:text="账号"
            android:textColor="@color/black1" />

        <TextView
            android:id="@+id/sex_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/account_more"
            android:layout_below="@+id/account_more"
            android:text="性别"
            android:textColor="@color/black1" />

        <TextView
            android:id="@+id/nick_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/account_more"
            android:layout_alignParentRight="true"
            android:text="名称"
            android:textColor="@color/black1" />

    </RelativeLayout>

</LinearLayout>